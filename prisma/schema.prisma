generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  firebaseUid    String   @unique
  email          String   @unique
  name           String
  role           Role     @default(CONSERJE)
  status         Status   @default(PENDING)
  assignedBy     String?  // ID del admin que asign√≥ el rol
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  requests       CredentialRequest[]
  shiftLogs      ShiftLog[]
}

model CredentialRequest {
  id            String   @id @default(cuid())
  userId        String
  desiredRole   Role
  reason        String?
  status        Status   @default(PENDING)
  submittedAt   DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
}

model ShiftLog {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime
  type          ShiftType
  timestamp     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  MAYORDOMO
  PORTERO
  MANTENCION
  PISCINA
  CONSERJE
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

enum ShiftType {
  IN
  OUT
}
